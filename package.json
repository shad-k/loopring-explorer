    "graphql-request": "^3.4.0",
    "js-cookie": "^3.0.1",
    "next": "^12.1.5",
    "numeral": "^2.0.6",
    "postcss-import": "^13.0.0",
    "postcss-preset-env": "7.4.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.3.1",
    "recharts": "2.1.9",
    "sass": "^1.32.8",
    "swr": "^0.5.6"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "^2.4.8",
