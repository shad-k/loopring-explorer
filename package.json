{
  "name": "loopring-explorer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p codegen:watch dev:next",
    "dev:next": "TAILWIND_MODE=watch next dev",
    "build": "run-p codegen build:next",
    "build:next": "next build",
    "start": "next start",
    "export": "next export",
    "prepare": "husky install",
    "test": "jest --watch",
